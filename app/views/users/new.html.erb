<!-- user update login page -->

<!-- header -->
<div class="grid-stack grid-stack-static grid-stack-6 top" style = "height:110px; margin-bottom:10px; z-index: 9999; background-color: rgba(255,255,255, 0.9);" >

    <div class="grid-stack-item" 
        data-gs-x="0" data-gs-y="0" 
        data-gs-width="1" data-gs-height="1" id="default">
            <div class="grid-stack-item-content"></div>
    </div>
    <div class="grid-stack-item" 
        data-gs-x="1" data-gs-y="0" 
        data-gs-width="4" data-gs-height="1" id="default">
            <div class="grid-stack-item-content">
                <div class="lg_top" style = "background-image: url(<%=asset_path 'logo.svg' %>)"></div>
            </div>
    </div>
    <div class="grid-stack-item" 
        data-gs-x="6" data-gs-y="0" 
        data-gs-width="1" data-gs-height="1" id="default">
            <div class="grid-stack-item-content"></div>
    </div>

</div>

<!-- bottom -->
<div class="grid-stack grid-stack-static grid-stack-6 bott" style = "height:100px; width: 95%; margin-left: 2.5%; position:fixed; bottom:0px; left:0px; right:0px; margin-bottom:0px; z-index: 9998; background-color: rgba(255,255,255, 0.9);-moz-border-radius-topleft: 10px;
-webkit-border-top-left-radius: 10px;
 border-top-left-radius: 10px;
-moz-border-radius-topright: 10px;
-webkit-border-top-right-radius: 10px;
border-top-right-radius: 10px;" >

    <div class="grid-stack-item" 
        data-gs-x="0" data-gs-y="0" 
        data-gs-width="2" data-gs-height="1" id="default">
            <div class="grid-stack-item-content">
            	<div class="txt_bott" style = "background-image: url(<%=asset_path 'type_blue_ol.svg' %>)"></div>
            </div>
    </div>
    <div class="grid-stack-item" 
        data-gs-x="2" data-gs-y="0" 
        data-gs-width="2" data-gs-height="1" id="default">
            <div class="grid-stack-item-content">
                <div>the latest the greatest the hottest</div>
            </div>
    </div>

</div>

<!-- profile header -->
<div class="grid-stack grid-stack-static grid-stack-6 profile_head" style = "margin-bottom:10px" >
   <div class="grid-stack-item" data-gs-x="0" data-gs-y="0" data-gs-width="3" data-gs-height="1">
            <div class="grid-stack-item-content" style = "background-color:white">
	            <%= form_for @user do |f| %>   
				<%=f.label :First_Name %>   
				<%=f.text_field :fname %> 
				<br><br>
				<%=f.label :Last_name %>   
				<%=f.text_field :lname %>  
				<br><br>
				<%=f.label :email %>   
				<%=f.email_field :email %>  
				<br><br>
				<%=f.label :password %>   
				<%=f.password_field :password %>  
				<br><br>
				<%=f.label :city %>   
				<%=f.text_field :city %> 
				<br><br>
				<%=f.label :state %>   
				<%=f.select :state, options_for_select(us_states) %>  
				<br><br> 
				<div class="button"><%=f.submit :create %></div>
				<% end %>
            </div>
    </div>

    <div class="grid-stack-item" data-gs-x="3" data-gs-y="0" data-gs-width="1" data-gs-height="1">
            <div class="grid-stack-item-content" style = "background-color:#32b5ff"></div>
    </div>
</div>
